{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"],
      "@app-types/*": ["src/types/*"],
      "@modules/*": ["src/modules/*"],
      "@common/*": ["src/common/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.spec.ts",
    "jest.config.js",
    ".eslintrc.js"
  ],
  "exclude": ["node_modules", "dist", "test"]
}